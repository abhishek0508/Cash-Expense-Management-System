<div style="background-color:grey" align="center">
<%= form_with scope: :user, url: users_path, local: true do |form| %>
    <p>
        <%=form.label :Name%><br>
        <%=form.text_field :title%>
    </p>
    <p>
        <%=form.label :Email%><br>
        <%=form.text_field :Email%>
    </p>
    <p>
        <%=form.label :Password%><br>
        <%=form.text_field :Password%>
    </p>
    <p>
        <%= form.submit%><br>
    </p>
<%end%>
</div>